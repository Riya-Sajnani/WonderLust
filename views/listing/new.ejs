<% layout('layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
           
    <h3>Create New Listing</h3>
    <br>
    <form action="/listing" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text"name="listing[title]" placeholder="Enter Titile" class="form-control"required>
            <div class="invalid-feedback">Please Enter a valid Title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please Enter a valid Description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image Link</label>
            <input type="text"name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
            <div class="invalid-feedback">Please Enter a valid Image URL</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price (per night)</label>
            <input type=""name="listing[price]" placeholder="Enter Price"class="form-control" required>
            <div class="invalid-feedback">Please Enter a valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Location</label>
            <input type="text"name="listing[location]" placeholder="Enter Location"class="form-control" required>
            <div class="invalid-feedback">Please Enter a valid Location</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input type="text"name="listing[country]" placeholder="Enter Country"class="form-control" required>
            <div class="invalid-feedback">Please Enter a valid Country Name</div>
        </div>
        
        <button class="add-btn btn mt-3 mb-2">Add</button>
        
    </form>
    </div>
    </div>
    
</body>
