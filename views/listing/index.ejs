<% layout('layouts/boilerplate') -%>
<body>
    <h3 style="margin: 2rem 0rem;">All Listings</h3>
    <!-- <form method="GET" action="/listing/new">
        <button>Add new Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let listing of allListing){%>
        <a class="card-link" href="/listing/<%=listing._id%>">
        <div class="card col" >
            <img src="<%=listing.image%>" class="card-img-top" alt="card" style="height: 20rem;">
            <div class="card-img-overlay">WonderLust</div>
            <div class="card-body">
                <p class="card-text">
                    <b><%=listing.title%> </b><br>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                </p>
            </div>
        </div>
        </a>
        <%}%>
    </div>
    
    
</body>


